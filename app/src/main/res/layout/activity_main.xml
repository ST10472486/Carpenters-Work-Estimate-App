<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#0D0C0C"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#40B5B8"
            android:gravity="center_horizontal|center_vertical"
            android:text="Carpenter's Work Estimate"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#ff6750a4"
                android:gravity="center"
                android:text="Task Selection"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rdbtnFlooring"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F76E19"
                    android:text="Flooring"
                    android:textSize="25dp" />

                <RadioButton
                    android:id="@+id/rdbtnFurniture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#40B5B8"
                    android:text="Furniture Assembly"
                    android:textSize="25dp" />

                <RadioButton
                    android:id="@+id/rdbtnDoor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#A36946"
                    android:backgroundTint="#F76E19"
                    android:text="Door Installation"
                    android:textSize="25dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#ff6750a4"
                android:gravity="center"
                android:text="Materials"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

            <CheckBox
                android:id="@+id/chkNails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#40B5B8"
                android:text="Nails (Cost:R20)"
                android:textSize="25dp" />

            <CheckBox
                android:id="@+id/chkHinges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F76E19"
                android:text="Hinges (Cost:R45)"
                android:textSize="25dp" />

            <CheckBox
                android:id="@+id/chkPlanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#40B5B8"
                android:text="Wood Planks (Cost:R250)"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/tvHours"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:background="#F76E19"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter number of hours"
                android:inputType="number"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnTotal"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="#F76E19"
                android:text="Calculate Estimated Total"
                android:textSize="25dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:background="#40B5B8"
            android:gravity="center"
            android:textSize="30dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>